<% @page_type ||= 'article' %>
<div class="article">
  <div class="header">
    <h2><a href="<%= article.url %>" rel="bookmark" title="Permanent Link to <%= article.title %>"><%= article.title %></a></h2>
    <div class="meta">
      <span class="author">by <%= article.author %></span>
      <span class="date"><%= article.date %></span>
    </div>        
  </div>
  <div>
    <% if summary_only %>
      <%= article.summary.formatted %>
      <% if article.summary.length != article.body.length %>
        <span class="right date"><a href="<%= article.url %>">read on...</a></span>
      <% end %>
    <% else %>
      <%= article.body.formatted %>
    <% end %>
  </div>
  <div class="footer">
    <p class="category">from <a href="/<%= article.category.downcase %>"><%= article.category %></a></p>
    <% unless summary_only %>  
    <div class="description">I'm Michael McClenaghan and I'm responsible for everything on this site. You're reading <em>Sideline</em>, a site that documents my journey in software development over the past few years. I spend my time consulting with organizations that want to get better at developing software. While most people think I'm crazy, I seriously get my kicks helping software teams in chaos. It's all worth it when you see happy users.</div>
    <% end %>
  </div>
  <% unless summary_only %>
    <% if article['disqus_url'] %>
    <script type="text/javascript">  var disqus_url = '<%= article['disqus_url'] %>'; </script> 
    <% end %>
    <%= render_partial :disqus if Serious.disqus %>
  <% end %>
</div>